<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivItem"
        android:layout_width="170dp"
        android:layout_height="240dp"
        android:background="@color/translucent"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />



    <TextView
        android:id="@+id/tvDescuento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:text="Sale"
        android:layout_marginBottom="10dp"
        app:layout_constraintRight_toRightOf="@id/ivItem"
        app:layout_constraintBottom_toBottomOf="@id/ivItem"
       />

    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$MXN000.00"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ivItem"
        app:layout_constraintRight_toRightOf="@id/ivItem"
        app:layout_constraintLeft_toLeftOf="@id/ivItem"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of the item"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvPrecio"
        app:layout_constraintLeft_toLeftOf="@id/ivItem"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintRight_toRightOf="@id/ivItem"
        />

</androidx.constraintlayout.widget.ConstraintLayout>